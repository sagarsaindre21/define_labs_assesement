<header id="page-title" class="jumbotron background">
  <div id="title-image" class="bg">
  </div>
  <div class="container">
    <div class="horizontal-center">
      <h1 class="article-title">Author:<%= @author.full_name %></h1>
      <h4 class="article-title">Date of Birth: <%= @author.display_birthdate %></h4>
      <h2 class="article-subtitle"></h2>
    </div>
  </div>
</header>

<div class="container foreground">
  <div class="row">
    <div class="col-lg-12">
      <div class="bs-component horizontal-center">
        <% if user_signed_in? %>
          <% if current_user == @author.user %>
            <%= link_to 'Edit', edit_author_path(@author) %> |
          <% end %> 
          <%= link_to 'Back', authors_path %>
        <% end %> 
      </div>
    </div>
  </div>
</div>

<div id="cards_landscape_wrap-2">
  <div class="container">
    <div class="row">
      <% @books.each do |book| %>
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
          <a href="">
            <div class="card-flyer">
              <div class="text-box">
                <div class="image-box">
                  <img src="https://cdn.pixabay.com/photo/2018/03/30/15/11/deer-3275594_960_720.jpg" alt="" />
                </div>
                <div class="text-container">
                  <h6><%= book.title %></h6>
                </div>
              </div>
            </div>
          </a>
        </div>
      <% end %>  
    </div>
  </div>
</div>

