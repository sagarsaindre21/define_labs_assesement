<div class="box record_detail_box">
  <div class="box-header">
    <div class="listHeaderContainer">
      <h3 class="box-title">Listing Books</h3>
      <a href="<%= new_book_path %>" class="btn btn-sm btn-flat bg-olive pull-right new_record_button"><i class="fa fa-plus-square"></i> New Book</a>
    </div>
  </div>
  
  <div class="box-body no-padding">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Title</th>
          <th>Authors</th>
          <th colspan="3" class="text-center">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @collection.each do |book| %>
          <tr>
            <td><%= book.title %></td>
             <td><%= book.authors_name %></td>
            <td><%= link_to 'Show', book_path(book) %></td>
            <% if current_user == book.user %>
              <td><%= link_to 'Edit', edit_book_path(book) %></td>
              <td><%= link_to 'delete', book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
