<header id="page-title" class="jumbotron background">
  <div id="title-image" class="bg">
  </div>
  <div class="container">
    <div class="horizontal-center">
      <h1 class="article-title"><%= @book.title %></h1>
      <h4 class="article-subtitle">By : <%= @book.authors_name %></h4>
    </div>
  </div>
</header>

<div class="container foreground">
  <div class="row">
    <div class="col-lg-12">
      <div class="bs-component horizontal-center">
        <% if user_signed_in? %>
          <% if current_user == @book.user %>
            <%= link_to 'Edit', edit_book_path(@book) %> |
          <% end %> 
          <%= link_to 'Back', books_path %>
        <% end %> 
      </div>
    </div>
  </div>
</div>
